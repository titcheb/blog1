<%- include("partials/header.ejs")%>
    <div class="posts">

        <% if(locals.dataArray.length>0) {%>
            <% dataArray.forEach(element=> {%>
                <div class="singleposts">
                <h3>
                    <%= element.name %>
                </h3>
                <p>
                 <strong>Posted on:</strong> <%= element.date %>
                </p>
                <p>
                    <%= element.personnummer %>
                </p>
                 <div class="formbtns">
                    
                        <form action="/post" class="d-lg-inline-flex" method="POST">
                        <button type="submit" class="btn btn-danger" value="<%= element.id %>" name="choice">Delete</button>
                    </form>
                    
                        <form action="/edit" method="POST">
                        <button type="submit" class="btn btn-info" name="edit" value="<%= element.id %>">Edit</button>
                    </form>
                 </div>
                    
                    
                    
                
                
    </div>

    <% }); %>

        <% }else{ %>
            <div class="singleposts">
                <h2 style="color: red;">
                    <%=nodata %>
                </h2>
            </div>

            <% } %>




            
                <%- include("partials/footer.ejs")%>